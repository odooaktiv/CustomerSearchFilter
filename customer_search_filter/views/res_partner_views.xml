<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_res_partner_view" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <field name="name" position="replace">
                    <field name="name" default_focus="1" placeholder="Name" context="{'search_by_phone': True, 'search_by_mobile': True, 'search_by_email': True, 'search_by_city': True, 'search_by_function': True}"
                        attrs="{'required' : [('type', '=', 'contact')]}" nolabel="1" />
                </field>
            </field>
        </record>
    </data>
</odoo>